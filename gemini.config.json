{
  "version": "2.0.0",
  "project": {
    "name": "gemini-schmiede",
    "description": "Modulares Multi-Agenten-Framework fuer autonome Software-Entwicklung",
    "language": "de"
  },
  "paths": {
    "utils":          ".gemini/utils",
    "logs":           ".gemini/logs",
    "plans":          ".gemini/plans",
    "docs":           ".gemini/docs",
    "skills":         "skills",
    "backups":        ".gemini/backups",
    "tests":          "tests",
    "projectContext": "project_context.md"
  },
  "contextUpdater": {
    "metaFile":  ".gemini/logs/context_meta.json",
    "sections": [
      "Projekt",
      "Architektur",
      "Datenhaltung",
      "Aktive Features",
      "Offene Probleme",
      "Letzte Aenderungen",
      "Abhaengigkeiten",
      "Umgebung"
    ]
  },
  "logging": {
    "level":            "INFO",
    "file":             ".gemini/logs/system.log",
    "maxFileSizeBytes": 10485760,
    "console":          true
  },
  "integrity": {
    "defaultThreshold": 0.15,
    "minAbsoluteLoss":  3,
    "strictSymbols":    true,
    "thresholds": {
      "tiny":   { "maxLines": 20,   "tolerance": 0.40 },
      "small":  { "maxLines": 100,  "tolerance": 0.15 },
      "medium": { "maxLines": 200,  "tolerance": 0.10 },
      "large":  { "maxLines": null, "tolerance": 0.05 }
    }
  },
  "analytics": {
    "statsFile": ".gemini/logs/stats.json"
  },
  "audit": {
    "command":         "gemini",
    "flags":           ["-y", "-p"],
    "timeout":         30000,
    "stages":          ["local", "integrity", "ai"],
    "localScript":     ".gemini/utils/validate_local.js",
    "integrityScript": ".gemini/utils/integrity_check.js"
  },
  "validation": {
    "loggerPatterns": [
      ".gemini/utils/logger",
      "require('./logger'",
      "require('../utils/logger'"
    ],
    "excludeFromLoggerCheck": [
      "logger.js",
      "validate_local.js",
      "error-handler.cjs",
      "run_tests.cjs"
    ],
    "warnOnConsoleLogs":      true,
    "maxFileLinesWarning":    500
  },
  "github": {
    "mainBranch":              "main",
    "branchPrefix":            "feature/",
    "branchPerFeatureRequired": true,
    "commitMsgMaxLen":         72
  },
  "session": {
    "stateFile": ".gemini/logs/session_state.json",
    "autoSave":  true
  },
  "agents": {
    "boss": {
      "context":      "BOSS",
      "allowedFiles": ["GEMINI.md", ".gemini/system_map.md", ".gemini/plans/**", ".gemini/logs/**"]
    },
    "planner": {
      "context":      "PLANNER",
      "allowedFiles": ["GEMINI.md", ".gemini/plans/**", ".gemini/docs/**"]
    },
    "reviewer": {
      "context":      "REVIEWER",
      "allowedFiles": [".gemini/plans/**", "src/**", "tests/**"]
    },
    "worker": {
      "context":      "WORKER",
      "allowedFiles": ["<plan-step-files-only>"]
    },
    "auditor": {
      "context":      "HYBRID-RUNNER",
      "allowedFiles": [".gemini/utils/**", "tests/**"]
    },
    "architecture-analyst": {
      "context":      "ARCH-ANALYST",
      "allowedFiles": ["src/**", ".gemini/docs/**", "GEMINI.md"]
    },
    "refactoring-agent": {
      "context":      "REFACTOR",
      "allowedFiles": ["<plan-step-files-only>"]
    },
    "tdd-agent": {
      "context":      "TDD",
      "allowedFiles": ["tests/**", "<plan-step-feature-files>"]
    },
    "frontend-agent": {
      "context":      "FRONTEND",
      "allowedFiles": ["src/frontend/**", "public/**", "assets/**"]
    },
    "backend-agent": {
      "context":      "BACKEND",
      "allowedFiles": ["src/backend/**", "src/api/**", "src/db/**"]
    }
  }
}
